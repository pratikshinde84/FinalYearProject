<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SecureServer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorSecondary">#0C4470</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="MyTabTextstyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="CustomMenuItemStyle">
        <item name="android:textColor">@color/white</item> <!-- Change text color here -->
        <item name="android:background">@color/black</item> <!-- Change background color here -->
    </style>


    <style name="MenuText">
        <item name="android:textColor">#E3DBDB</item>
    </style>

    <style name="Theme.SecureServer" parent="Base.Theme.SecureServer" />

    <style name="mybetastyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.SecureServer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SecureServer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SecureServer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>